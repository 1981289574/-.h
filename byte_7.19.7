//编写程序数一下 1到 100 的所有整数中出现多少个数字9
#include<stdio.h>
 int main()
{
	 int i;
	 int sum = 0;
	 for (i = 0; i < 100; i++)
	 {
		 if (i % 10 == 9)//将个位数字提出来，检查是否为9
		 {
			 sum++;
		 }
		 if (i / 10 == 9)//将十位数字提出来，检查是否为9
		 {
			 sum++;
	     }
     }
	 printf("%d\n", sum);
	 return 0;
}
