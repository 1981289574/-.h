#define _CRT_SECURE_NO_WARNINGS 1
//对于for循环，使用break和contiune

#include <stdio.h>
int main()
{
	int a = 0, b = 0;
	//for循环将a，b的值初始化为1
	for (a = 1, b = 1; a <= 100; a++)
	{
		if (b >= 20) break;
		if (b % 3 == 1)
		{
			b = b + 3;
			continue;//continue时，若if语句不符合，可跳过本次循环
		}
		b = b - 5;
	}
	printf("%d\n", a);
	return 0;
}
